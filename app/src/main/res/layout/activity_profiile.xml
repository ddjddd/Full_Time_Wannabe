<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pyneer.full_time_wannabe.activity.main.ProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/al_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/ll_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/al_toolbar"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/al_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_background"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_profile"
                style="@style/card.base">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    //임시 프로필 사진

                    //리얼 프로필사진

                    <!--<de.hdodenhof.circleimageview.CircleImageView-->
                    <!--android:id="@+id/main_profile_pic"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="38dp"-->
                    <!--android:layout_alignParentStart="true"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginRight="15dp"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:elevation="2dp"-->
                    <!--app:civ_border_color="#dddddd"-->
                    <!--app:civ_border_width="5dp"-->
                    <!--/>-->


                    //이름하고 전화번호 레이아웃

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_below="@+id/al_toolbar"
                        tools:src="@tools:sample/avatars[0]" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="홍길동"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="[Hong Gil Dong]"

                                android:textSize="20sp" />

                        </LinearLayout>

                        //전화번호랑 수정 버튼

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:text="010-1111-1111"
                                android:textColor="#fff"
                                android:textSize="20sp" />

                            <ImageButton
                                android:id="@+id/btn_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                app:srcCompat="@android:drawable/ic_menu_edit" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_wp"
                style="@style/card.base"
                android:layout_below="@id/card_profile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/baseYellowLight"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="근무지"
                            android:textSize="20dp" />

                        <ImageButton
                            android:id="@+id/btn_workplace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:background="#fff"
                            app:srcCompat="@android:drawable/ic_menu_edit" />


                    </RelativeLayout>

                    <ListView
                        android:id="@+id/lv_workplace"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="8dp"
                        android:divider="@null"
                        android:dividerHeight="0dp">

                    </ListView>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_account"
                style="@style/card.base"
                android:layout_below="@id/card_wp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/baseYellowLight"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="급여계좌"
                            android:textSize="20dp" />

                        <ImageButton
                            android:id="@+id/btn_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:background="#fff"
                            app:srcCompat="@android:drawable/ic_menu_edit" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="left"
                        android:text="농협 123-23-2123412"
                        android:textSize="15dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="bottom|end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_logout"
                style="@style/btn.base"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_base"
                android:text="로그아웃" />

            <Button
                android:id="@+id/btn_withdraw"
                style="@style/btn.base"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_blue"
                android:text="회원탈퇴" />


        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>